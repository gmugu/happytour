<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.gmugu.paole.view.fragment.SettingFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="#1B1B1B">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="#00000000"
                android:text="&lt;"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/fragment_setting_modify_userinfo_bn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="#1B1B1B"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="修改个人资料"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/fragment_setting_connect_device_bn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="连接运动设备"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/fragment_setting_check_update_bn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="检查更新"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/fragment_setting_clean_cache_bn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="清除缓存"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/fragment_setting_about_bn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="关于"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/fragment_setting_logout_bn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="退出登录"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
