<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    tools:context="com.gmugu.paole.view.fragment.RegisterFragment">

    <RelativeLayout
        android:id="@+id/fragment_register_actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#1B1B1B">

        <Button
            android:id="@+id/fragment_register_back_bn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:text="&lt;"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_register_useremail_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/fragment_register_actionbar_layout"
        android:layout_marginTop="40dp"
        android:background="#1B1B1B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:text="登录邮箱:"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/fragment_register_email_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="请输入登录邮箱"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="#616161" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_register_token_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/fragment_register_useremail_layout"
        android:layout_marginTop="10dp"
        android:background="#1B1B1B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:text="邮箱验证码:"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/fragment_register_get_token_bn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="7dp"
                android:background="@drawable/bn_selector_green"
                android:text="获取"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/fragment_register_token_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/fragment_register_get_token_bn"
                android:background="#00000000"
                android:hint="请输入验证码"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="#616161" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_register_passwd_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/fragment_register_token_layout"
        android:layout_marginTop="10dp"
        android:background="#1B1B1B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:text="设置密码:"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/fragment_register_passwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="请输入6~20位密码"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#616161" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_register_passwd_repeat_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/fragment_register_passwd_layout"
        android:layout_marginTop="10dp"
        android:background="#1B1B1B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:text="设置密码:"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/fragment_register_passwd_repeat_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="请再次确认密码"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#616161" />
    </LinearLayout>

    <Button
        android:id="@+id/fragment_register_next_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_register_passwd_repeat_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bn_selector_red"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>
