<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232">

    <RelativeLayout
        android:id="@+id/activity_retreve_password_actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#1B1B1B">

        <Button
            android:id="@+id/activity_retreve_password_back_bn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:text="&lt;"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_retreve_password_useremail_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/activity_retreve_password_actionbar_layout"
        android:layout_marginTop="30dp"
        android:background="#1B1B1B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:text="登录邮箱:"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_retreve_password_email_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="请输入登录邮箱"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="#616161" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_retreve_password_next_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_retreve_password_useremail_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bn_selector_red"
        android:text="请求修改密码"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>
