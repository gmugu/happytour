<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    tools:context="com.gmugu.paole.view.fragment.ModifyUserInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fragment_modify_user_info_actionbar_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="#1B1B1B">

            <Button
                android:id="@+id/fragment_modify_user_info_back_bn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="#00000000"
                android:text="&lt;"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="完善个人信息"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/fragment_modify_user_info_headimg_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/fragment_modify_user_info_actionbar_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/add_images" />

        <LinearLayout
            android:id="@+id/fragment_modify_user_info_nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/fragment_modify_user_info_headimg_iv"
            android:layout_marginTop="20dp"
            android:background="#1B1B1B">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:text="昵称:"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_modify_user_info_nickname_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="right|center_vertical"
                android:paddingRight="15dp"
                android:text="未设置 &gt;"
                android:textColor="@android:color/white"
                android:textColorHint="#616161" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_modify_user_info_gender_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/fragment_modify_user_info_nickname_layout"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:text="性别:"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_modify_user_info_gender_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="right|center_vertical"
                android:paddingRight="15dp"
                android:text="未设置 &gt;"
                android:textColor="@android:color/white"
                android:textColorHint="#616161" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_modify_user_info_height_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/fragment_modify_user_info_gender_layout"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:text="身高:"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_modify_user_info_height_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="right|center_vertical"
                android:paddingRight="15dp"
                android:text="未设置 &gt;"
                android:textColor="@android:color/white"
                android:textColorHint="#616161" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_modify_user_info_weight_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/fragment_modify_user_info_height_layout"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:text="体重:"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_modify_user_info_weight_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="right|center_vertical"
                android:paddingRight="15dp"
                android:text="未设置 &gt;"
                android:textColor="@android:color/white"
                android:textColorHint="#616161" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_modify_user_info_birthday_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/fragment_modify_user_info_weight_layout"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:text="生日:"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_modify_user_info_birthday_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="right|center_vertical"
                android:paddingRight="15dp"
                android:text="未设置 &gt;"
                android:textColor="@android:color/white"
                android:textColorHint="#616161" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_modify_user_info_city_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/fragment_modify_user_info_birthday_layout"
            android:layout_marginTop="10dp"
            android:background="#1B1B1B">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:text="城市:"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_modify_user_info_city_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="right|center_vertical"
                android:paddingRight="15dp"
                android:text="未设置 &gt;"
                android:textColor="@android:color/white"
                android:textColorHint="#616161" />

        </LinearLayout>

        <Button
            android:id="@+id/fragment_modify_user_info_finish_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_modify_user_info_city_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bn_selector_red"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</ScrollView>
